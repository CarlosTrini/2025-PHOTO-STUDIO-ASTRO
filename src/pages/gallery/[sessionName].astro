export function getStaticPaths() {
    return Object.keys(galleries).map((key) => ({
        params: { sessionName: key },
        props: {
            pictures: galleries[key as keyof typeof galleries],
            title: titlesLayout[key as keyof typeof galleries].title,
            subtitle: titlesLayout[key as keyof typeof galleries].subtitle,
        },
    }));
}
const { pictures, title, subtitle } = Astro.props;
---

<LayoutGallery title={title} subtitle={subtitle}>
    <GalleryComponent nameGallery={title} pictures={pictures} client:load />
</LayoutGallery>
