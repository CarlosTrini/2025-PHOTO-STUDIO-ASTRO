---
import DetailsServices from "@components/DetailsServices.astro";
import type { Label } from "@components/TabsServices.astro";
import TabsServices from "@components/TabsServices.astro";
import {
    getRouteDataService,
    makeTabsServicesNames,
} from "@helpers/infoRoutes";
import LayoutServices from "@layouts/LayoutServices.astro";
import { TabItem } from "free-astro-components";
import "@styles/layout/layoutServices.css";
import familyImage from "@assets/img/services/family-one.jpg";

let labels: Label[] = [];
const subRoutes = getRouteDataService("/services", "family");
if (subRoutes) {
    labels = makeTabsServicesNames(subRoutes || []);
}
---

<LayoutServices
    pageTitle="En Familia"
    heroImage={familyImage}
    bannerTitle=`"Momentos familiares capturados con amor y autenticidad"`
    bannerSubtitle="La familia es el refugio donde el tiempo se detiene con ternura; capturamos cada abrazo, cada risa compartida y cada mirada llena de amor, para que esos momentos sagrados vivan por siempre en vuestro corazón."
>
    <TabsServices labels={labels}>
        <TabItem active class={``}>
            <section class="service-description-info">
                <article>
                    <h3>Sesión familiar en estudio</h3>
                    <p>
                        Sesión fotográfica pensada para capturar la <span
                            >conexión, complicidad y esencia de tu familia</span
                        > en un ambiente cómodo y controlado.
                    </p>
                    <p>
                        La sesión se realiza en nuestro estudio, con una
                        duración aproximada de <span>60 minutos</span>, ideal
                        para lograr imágenes naturales, espontáneas y llenas de
                        emoción, sin prisas y respetando el ritmo de cada
                        integrante.
                    </p>
                </article>

                <article>
                    <h3>Un recuerdo para toda la vida</h3>
                    <p>
                        Durante la sesión cuidamos cada detalle: iluminación,
                        composición y poses guiadas de forma sutil para que el
                        resultado sea <span>auténtico y atemporal</span>.
                    </p>
                    <p>
                        Es una experiencia ideal para familias con niños,
                        parejas con hijos o incluso sesiones
                        intergeneracionales, creando recuerdos que podrán
                        revivir y compartir por muchos años.
                    </p>
                </article>
            </section>

            <DetailsServices
                deliverableDetails={[
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "album",
                        },
                        listDescription: [
                            "Álbum fotográfico 30x30 cm con 40 páginas",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "photoFrame",
                        },
                        listDescription: [
                            "1 fotografía familiar enmarcada 30x40 cm",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de la usb entregable",
                            name: "usb",
                        },
                        listDescription: [
                            "USB con fotografías finales editadas",
                        ],
                    },
                ]}
                detailsInfo={[
                    "70 fotos digitales",
                    "Sesión fotográfica familiar en estudio",
                    "Duración aproximada de 60 minutos",
                    "Selección de fotografías digitales en alta resolución",
                    "Álbum físico 30x30 cm (20 páginas)",
                    "1 fotografía enmarcada 30x40 cm",
                    "Entrega digital y física de 2 a 3 semanas",
                ]}
            />
        </TabItem>
        <TabItem class={``}>
            <section class="service-description-info">
                <article>
                    <h3>Sesión familiar en exterior</h3>
                    <p>
                        Sesión fotográfica pensada para capturar a tu familia en
                        un entorno natural, aprovechando la <span
                            >luz natural, el movimiento y la espontaneidad</span
                        > que solo un espacio abierto puede ofrecer.
                    </p>
                    <p>
                        La sesión se realiza en una locación previamente
                        acordada (parque, playa, campo o entorno urbano), con
                        una duración aproximada de <span>60 minutos</span>,
                        permitiendo que todo fluya de manera relajada y
                        auténtica.
                    </p>
                </article>

                <article>
                    <h3>Momentos reales, recuerdos auténticos</h3>
                    <p>
                        Durante la sesión fomentamos la interacción natural
                        entre los integrantes de la familia, logrando imágenes
                        llenas de
                        <span>emoción, conexión y naturalidad</span>, sin poses
                        rígidas ni situaciones forzadas.
                    </p>
                    <p>
                        Es ideal para familias activas, con niños o mascotas,
                        que buscan fotografías vivas y dinámicas que reflejen su
                        esencia tal como es.
                    </p>
                </article>
            </section>

            <DetailsServices
                deliverableDetails={[
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "album",
                        },
                        listDescription: [
                            "Álbum fotográfico 30x30 cm con 40 páginas",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "photoFrame",
                        },
                        listDescription: [
                            "1 fotografía familiar enmarcada 30x40 cm",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de la usb entregable",
                            name: "usb",
                        },
                        listDescription: [
                            "USB con fotografías finales editadas",
                        ],
                    },
                ]}
                detailsInfo={[
                    "Sesión fotográfica familiar en exterior",
                    "Duración aproximada de 60 minutos",
                    "Locación previamente acordada",
                    "Selección de fotografías digitales en alta resolución",
                    "Álbum físico 30x30 cm (40 páginas)",
                    "1 fotografía enmarcada 30x40 cm",
                    "Entrega digital y física de 2 a 3 semanas",
                ]}
            />
        </TabItem>

        <TabItem class={``}>
            <section class="service-description-info">
                <article>
                    <h3>Sesión lifestyle familiar</h3>
                    <p>
                        Sesión fotográfica de estilo <span
                            >documental y natural</span
                        >, pensada para capturar la vida tal como es, sin poses
                        forzadas ni escenarios artificiales.
                    </p>
                    <p>
                        Se realiza en el entorno cotidiano de tu familia, ya sea
                        en casa o en un espacio habitual, con una duración
                        aproximada de
                        <span>90 minutos</span>, permitiendo que las emociones y
                        los momentos reales fluyan con total libertad.
                    </p>
                </article>

                <article>
                    <h3>Historias reales, momentos cotidianos</h3>
                    <p>
                        Más que una sesión de fotos, es una experiencia donde se
                        documentan gestos, miradas, juegos y rutinas que forman
                        parte de su historia familiar.
                    </p>
                    <p>
                        Ideal para familias que buscan recuerdos auténticos,
                        <span>imperfectos y llenos de vida</span>, creando
                        imágenes con un alto valor emocional y narrativo.
                    </p>
                </article>
            </section>

            <DetailsServices
                deliverableDetails={[
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "album",
                        },
                        listDescription: [
                            "Álbum fotográfico 30x30 cm con 40 páginas",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "photoFrame",
                        },
                        listDescription: [
                            "1 fotografía lifestyle enmarcada 30x40 cm",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de la usb entregable",
                            name: "usb",
                        },
                        listDescription: [
                            "USB con fotografías digitales editadas",
                        ],
                    },
                ]}
                detailsInfo={[
                    "Sesión lifestyle familiar en entorno cotidiano",
                    "Duración aproximada de 90 minutos",
                    "50 fotografías digitales en alta resolución entregadas en USB",
                    "Edición de color y luz con estilo natural",
                    "Álbum físico 30x30 cm (40 páginas)",
                    "1 fotografía enmarcada 30x40 cm",
                    "Entrega digital y física de 2 a 3 semanas",
                ]}
            />
        </TabItem>
    </TabsServices>
</LayoutServices>
