---
import Layout from "@layouts/Layout.astro";
import "@styles/pages/services/homeServices.css";
import { routes } from "@utils/constants/routes";
import { Image } from "astro:assets";

import bussinessImage from "@assets/img/services/bussiness-one.jpg";
import familyImage from "@assets/img/services/family-one.jpg";
import petsImage from "@assets/img/services/pets-one.jpg";
import maternityImage from "@assets/img/services/maternity-one.jpg";
import eventsImage from "@assets/img/services/events-one.jpg";
import couplesImage from "@assets/img/services/couples-one.jpg";
import religiousImage from "@assets/img/services/religious-one.jpg";
import weddingImage from "@assets/img/services/wedding-one.jpg";
import emptyImage from "@assets/img/generic/services-menu.jpg";

const serviceRoutes = routes.filter((router) => router.basePath == "/services");

const images = {
    "family-one": familyImage,
    "pets-one": petsImage,
    "bussiness-one": bussinessImage,
    "events-one": eventsImage,
    "couples-one": couplesImage,
    "religious-one": religiousImage,
    "wedding-one": weddingImage,
    "maternity-one": maternityImage,
};
---

<Layout>
    <main class={`t-100vh t-padding-header main-service-page`}>
        <h1 class={`t-page-titles service-title-page`}>SESIONES</h1>
        <h4 class={`service-subtitle`}>
            Nuestros servicios incluyen: Fotografía, video y tomas con dron
        </h4>

        <section class="service-container">
            <div class="swiper mySwiper-services">
                <div class="swiper-wrapper">
                    {
                        serviceRoutes.map((routes) =>
                            routes.routes.map(
                                (route) =>
                                    route.path !== "" && (
                                        <div class="swiper-slide slide-service">
                                            <figure>
                                                <Image
                                                    src={
                                                        route?.imgName
                                                            ? images[
                                                                  route.imgName as keyof typeof images
                                                              ]
                                                            : emptyImage
                                                    }
                                                    alt={`Sesión fotográfica de ${route.name}`}
                                                    loading="lazy"
                                                />
                                            </figure>
                                            <h5 class={`slide-title`}>
                                                <a
                                                    href={`${routes.basePath}${route.path}`}
                                                    class="slide-title-link"
                                                >
                                                    {route.name}
                                                    <p>
                                                        Ver detalles{" "}
                                                        <svg
                                                            xmlns="http://www.w3.org/2000/svg"
                                                            height="20"
                                                            width="20"
                                                            viewBox="0 0 640 640"
                                                        >
                                                            <path
                                                                fill="#ffffff"
                                                                d="M566.6 342.6C579.1 330.1 579.1 309.8 566.6 297.3L406.6 137.3C394.1 124.8 373.8 124.8 361.3 137.3C348.8 149.8 348.8 170.1 361.3 182.6L466.7 288L96 288C78.3 288 64 302.3 64 320C64 337.7 78.3 352 96 352L466.7 352L361.3 457.4C348.8 469.9 348.8 490.2 361.3 502.7C373.8 515.2 394.1 515.2 406.6 502.7L566.6 342.7z"
                                                            />
                                                        </svg>
                                                    </p>
                                                </a>
                                            </h5>
                                        </div>
                                    ),
                            ),
                        )
                    }
                </div>
            </div>
        </section>
    </main>
</Layout>
<script>
    import Swiper from "swiper/bundle";

    var swiper = new Swiper(".mySwiper-services", {
        effect: "coverflow",
        grabCursor: true,
        autoplay: {
            delay: 3500,
            disableOnInteraction: false,
        },
        centeredSlides: true,
        slidesPerView: "auto",
        coverflowEffect: {
            rotate: 50,
            stretch: 0,
            depth: 100,
            modifier: 1,
            slideShadows: true,
        },
        // pagination: {
        //     el: ".swiper-pagination",
        // },
    });
</script>
