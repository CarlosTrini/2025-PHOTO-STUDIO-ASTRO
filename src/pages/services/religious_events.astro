---
import DetailsServices from "@components/DetailsServices.astro";
import type { Label } from "@components/TabsServices.astro";
import TabsServices from "@components/TabsServices.astro";
import {
    getRouteDataService,
    makeTabsServicesNames,
} from "@helpers/infoRoutes";
import LayoutServices from "@layouts/LayoutServices.astro";
import { TabItem } from "free-astro-components";
import "@styles/layout/layoutServices.css";

import religiousImage from "@assets/img/services/religious-one.jpg";

let labels: Label[] = [];
const subRoutes = getRouteDataService("/services", "religious_events");
if (subRoutes) {
    labels = makeTabsServicesNames(subRoutes || []);
}
---

<LayoutServices
    pageTitle="Eventos Religiosos"
    heroImage={religiousImage}
    bannerTitle=`"Historias de amor capturadas para siempre"`
    bannerSubtitle=`La fotografía es la única forma de detener el tiempo sin que el
            momento pierda su latido; capturamos el hoy para que vuestro
            'siempre' sea inolvidable.`
>
    <TabsServices labels={labels}>
        <TabItem class={``}>
            <section class="service-description-info">
                <article>
                    <h3>Sesión de primera comunión</h3>
                    <p>
                        Sesión fotográfica pensada para capturar uno de los
                        momentos más importantes en la vida de tu hijo o hija,
                        con imágenes llenas de
                        <span>significado, emoción y delicadeza</span>.
                    </p>
                    <p>
                        La sesión puede realizarse en estudio, exterior o en la
                        iglesia, con una duración aproximada de <span
                            >60 a 90 minutos</span
                        >, adaptándose al ritmo del niño o niña y al desarrollo
                        del evento.
                    </p>
                </article>

                <article>
                    <h3>Recuerdos que perduran</h3>
                    <p>
                        Cuidamos cada detalle: vestuario, expresiones y momentos
                        clave, logrando fotografías naturales y elegantes que
                        reflejan la importancia de este día tan especial.
                    </p>
                    <p>
                        Ideal para quienes buscan un recuerdo completo y
                        atemporal, combinando <span
                            >retrato, familia y ceremonia</span
                        > en una sola experiencia fotográfica.
                    </p>
                </article>
            </section>

            <DetailsServices
                deliverableDetails={[
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "album",
                        },
                        listDescription: [
                            "Álbum fotográfico 30x30 cm con 40 páginas",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de una fotografia enmarcada",
                            name: "photoFrame",
                        },
                        listDescription: [
                            "1 fotografía de primera comunión enmarcada 30x40 cm",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de la usb entregable",
                            name: "usb",
                        },
                        listDescription: [
                            "USB con fotografías digitales editadas",
                        ],
                    },
                ]}
                detailsInfo={[
                    "Sesión fotográfica de primera comunión",
                    "Duración aproximada de 60 a 90 minutos",
                    "Cobertura en estudio, exterior o iglesia",
                    "60 fotografías digitales en alta resolución entregadas en USB",
                    "Edición profesional de color y luz",
                    "Álbum físico 30x30 cm (40 páginas)",
                    "1 fotografía enmarcada 30x40 cm",
                    "Entrega digital y física de 2 a 3 semanas",
                ]}
            />
        </TabItem>
        <TabItem class={``}>
            <section class="service-description-info">
                <article>
                    <h3>Sesión de bautizo</h3>
                    <p>
                        Cobertura fotográfica de uno de los primeros y más
                        importantes eventos en la vida de tu bebé, capturando
                        cada instante con
                        <span>sensibilidad, respeto y naturalidad</span>.
                    </p>
                    <p>
                        Acompañamos el evento desde la llegada a la iglesia, la
                        ceremonia y los momentos posteriores con la familia, con
                        una duración aproximada de <span>60 minutos</span>.
                    </p>
                </article>

                <article>
                    <h3>Un recuerdo lleno de significado</h3>
                    <p>
                        Nos enfocamos en los gestos, miradas y detalles que
                        hacen único este día, logrando imágenes emotivas y
                        llenas de simbolismo.
                    </p>
                    <p>
                        Ideal para conservar un recuerdo completo del bautizo,
                        incluyendo
                        <span>familia, padrinos y momentos clave</span> de la ceremonia.
                    </p>
                </article>
            </section>

            <DetailsServices
                deliverableDetails={[
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "album",
                        },
                        listDescription: [
                            "Álbum fotográfico 30x30 cm con 40 páginas",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de una fotografia enmarcada",
                            name: "photoFrame",
                        },
                        listDescription: [
                            "1 fotografía de bautizo enmarcada 30x40 cm",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de la usb entregable",
                            name: "usb",
                        },
                        listDescription: [
                            "USB con fotografías digitales editadas",
                        ],
                    },
                ]}
                detailsInfo={[
                    "Cobertura fotográfica de bautizo",
                    "Duración aproximada de 60 minutos",
                    "Cobertura de ceremonia y fotografías familiares",
                    "50 fotografías digitales en alta resolución entregadas en USB",
                    "Edición profesional de color y luz",
                    "Álbum físico 30x30 cm (40 páginas)",
                    "1 fotografía enmarcada 30x40 cm",
                    "Entrega digital y física de 2 a 3 semanas",
                ]}
            />
        </TabItem>

        <TabItem class={``}>
            <section class="service-description-info">
                <article>
                    <h3>Sesión de confirmación</h3>
                    <p>
                        Sesión fotográfica pensada para documentar un momento
                        clave en el crecimiento personal y espiritual, con
                        imágenes que reflejan
                        <span>madurez, significado y emoción</span>.
                    </p>
                    <p>
                        La cobertura puede realizarse en la iglesia y
                        alrededores, con una duración aproximada de <span
                            >60 a 90 minutos</span
                        >, adaptándose al desarrollo de la ceremonia y a las
                        fotografías familiares posteriores.
                    </p>
                </article>

                <article>
                    <h3>Un recuerdo de una etapa importante</h3>
                    <p>
                        Nos enfocamos en capturar los momentos más relevantes de
                        la ceremonia, así como retratos naturales del
                        confirmando junto a su familia y padrinos.
                    </p>
                    <p>
                        Ideal para quienes buscan un recuerdo elegante y
                        atemporal, combinando <span
                            >ceremonia, retrato y fotografía familiar</span
                        >
                        en una sola sesión.
                    </p>
                </article>
            </section>

            <DetailsServices
                deliverableDetails={[
                    {
                        img: {
                            alt: "Imagen ilustrativa de un album fotografico",
                            name: "album",
                        },
                        listDescription: [
                            "Álbum fotográfico 30x30 cm con 40 páginas",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de una fotografia enmarcada",
                            name: "photoFrame",
                        },
                        listDescription: [
                            "1 fotografía de confirmación enmarcada 30x40 cm",
                        ],
                    },
                    {
                        img: {
                            alt: "Imagen ilustrativa de la usb entregable",
                            name: "usb",
                        },
                        listDescription: [
                            "USB con fotografías digitales editadas",
                        ],
                    },
                ]}
                detailsInfo={[
                    "Cobertura fotográfica de confirmación",
                    "Duración aproximada de 60 a 90 minutos",
                    "Cobertura de ceremonia y retratos familiares",
                    "55 fotografías digitales en alta resolución entregadas en USB",
                    "Edición profesional de color y luz",
                    "Álbum físico 30x30 cm (40 páginas)",
                    "1 fotografía enmarcada 30x40 cm",
                    "Entrega digital y física de 2 a 3 semanas",
                ]}
            />
        </TabItem>
    </TabsServices>
</LayoutServices>
